@{
  Layout = "_Layout";
}

@model Pierre.Models.Treat

<h1>Add a new task</h1>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.TreatName)
    @Html.TextBoxFor(model => model.TreatName)

    @Html.Label("Select flavor")
    @Html.DropDownList("FlavorId")

    <input type="submit" value="Add new treat" class="accept" />
}
<p>@Html.ActionLink("Show all treats", "Index", new { area = "" }, new { @class = "accept" })</p>