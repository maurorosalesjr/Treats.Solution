@{
  Layout = "_Layout";
}

@model Pierre.Models.Flavor;

<h1>Flavor Details</h1>
<hr />
<h3>@Html.DisplayNameFor(model => model.FlavorName): @Html.DisplayFor(model => model.FlavorName)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This flavor does not contain any treats</p>
}
else
{
  <h4>Treats that have this flavor:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Treat.TreatName</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to flavors", "Index", new { area = "" }, new { @class = "accept" })</p>
<p>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId }, new { @class = "accept" })</p>
<p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId }, new { @class = "accept" })</p>
